= form_for @dish do |f|
  -if @dish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dish.errors.count, "error")} prohibited this dish from being saved:"
      %ul
        - @dish.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :portion
    = f.number_field :portion
  .actions
    = f.submit 'Save'
