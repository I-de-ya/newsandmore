-#
  %li{:id => "photo_#{photo.id}"}
    = link_to image_tag(photo.image.url(:admin)), photo.image.url
    = link_to "удалить", url_for([:admin,parent,photo]), :method => :delete, :confirm => "Точно удалить?", :remote => true, :title => "Удалить", :class => "del"
%li{class: "handle", :id => "photo_#{photo.id}"}
  = link_to photo.image.url, style: "background-image:url(#{photo.image.admin})" do
    %em= photo.image.to_s.gsub(/.*\/(.*)\z/,'\1')
  = link_to "удалить", url_for([:admin,parent,photo]), :method => :delete, :confirm => "Точно удалить?", :remote => true, :title => "Удалить", :class => "del"