- content_for :page_header do
  %h1 Отзывы
  %p
    = link_to "Добавить отзыв", new_admin_recall_path
- if @recalls.empty?
  %h2 Пока нет ни одного отзыва.
  %p
    Хотите
    = link_to "добавить?", new_admin_note_path
- else
  %table.list
    %colgroup
      %col.w1
      %col.w1
      %col
      %col
      %col.w1
    %tr
      %th 
      %th
      %th Автор
      %th Отправлен
      %th

    - @recalls.each do |r|
      %tr
        %td
        %td.show= link_to "", [:toggleshow,:admin,r], :class => r.visible ? nil : "not-show"
        %td= link_to r.name, edit_admin_recall_path(r)
        %td= Russian.strftime(r.created_at, "%Y/%b/%d,  %H:%M")
        %td= link_to "Удалить", [:admin,r], :class => :del, :method => :delete
