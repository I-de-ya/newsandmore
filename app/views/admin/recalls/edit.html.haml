- content_for :page_header do
  %h1
    - if @recall.new_record?
      Добавить отзыв
    - else
      Редактирование отзыва
      
= form_for [:admin,@recall] do |f|
  %table
    %tr
      %th= f.label :name
      %td= f.text_field :name
    %tr
      %th{:colspan => 2}
        = f.check_box :show
        = f.label :show
    %tr
      %td{:colspan => "2"}
        = f.label :body
        %br
        = f.text_area :body
      
  .actions= submit_tag "Сохранить"
