- content_for :page_header do
  %h1
    - if @post.new_record?
      Добавить новость
    - else
      Редактирование новость
  %p= link_to "Назад", [:admin, :posts]
      
= form_for [:admin, @post] do |f|
  %table
    %tr
      %th= f.label :title
      %td= f.text_field :title
    %tr
      %td= f.label :image
      %td= f.file_field :image 
    %tr
      %th= f.label :image_title
      %td= f.text_field :image_title   
    %tr
      %th{:colspan => 2}
        = f.check_box :show
        = f.label :show
    %tr
      %td{:colspan => "2"}
        = f.label :body
        %br
        = f.text_area :body
      
  .actions= f.submit "Сохранить"
