- a = controller.controller_name
%ul#nav
  -case @active
  -when :materials
    /%li{:class => "#{'active' if %w{posts}.include? a}"}= link_to "Новости", admin_posts_path
    /%li{:class => "#{'active' if %w{recalls}.include? a}"}= link_to "Отзывы", admin_recalls_path
    /%li{:class => "#{'active' if %w{slaiders images}.include? a}"}= link_to "Слайдеры", admin_slaiders_path
    /%li{:class => "#{'active' if %w{pages}.include? a}"}= link_to "Страницы", admin_pages_path
    /%li{:class => "#{'active' if %w{users}.include? a}"}= link_to "Пользователи", admin_users_path
    /%li{:class => "#{'active' if %w{settings}.include? a}"}= link_to "Настройки", admin_settings_path
    /%li{:class => "#{'active' if "events" == a}"}= link_to "События", [:admin,:events]
    %li{:class => "#{'active' if "dishes" == a}"}= link_to "Блюда", [:admin,:events]
    %li{:class => "#{'active' if "reservations" == a}"}= link_to "Резервы", [:admin,:reservations]
    %li{:class => "#{'active' if "menu_sections" == a}"}= link_to "Зеленая менюшка", [:admin,:sections]

  -when :menu
    %li{:class => "#{'active' if "sections" == a}"}= link_to "Разделы", [:admin,:sections]
    - if params[:section_id]
      %li{:class => "#{'active' if "categories" == a}"}= link_to "Категории", admin_section_categories_path(params[:section_id])
      - if params[:category_id]
        %li{:class => "#{'active' if "dishes" == a}"}= link_to "Блюда", admin_section_category_dishes_path(params[:section_id],params[:category_id])