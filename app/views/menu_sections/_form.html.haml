= form_for @menu_section do |f|
  -if @menu_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@menu_section.errors.count, "error")} prohibited this menu_section from being saved:"
      %ul
        - @menu_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
