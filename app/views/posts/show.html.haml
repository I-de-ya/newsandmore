.left_column
	.content
		%h3#dark_text= t(:news_and_special)
		%hr
		= render 'layouts/menu'
		%p#notice= notice
		%p#dark_text= @post.created_at.strftime("%d/%m/%Y")
		%p#light_text= @post.title
		%p= raw(@post.body)
	= render "shared/footer"
.right_column
	.image
		=  @post.image? ? (image_tag @post.image_url) : image_tag("empty_image(415x300).png")
		= @post.image_title if (@post.image_title? && @post.image?)
	=render 'events/archive'