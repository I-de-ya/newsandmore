.left_column

	.about
		%h3#dark_text О РЕСТОРАНЕ
		%hr
		= truncate(@text.body, :length => 300)
		%p= link_to "Подробнее", '/about'
	.main_menu
		%ul
			%li#dark_text= link_to "ОСНОВНЫЕ БЛЮДА", main_dishes_path
			%hr
			%li#dark_text= link_to "ЗАВТРАКИ", breakfasts_path
			%hr	
			%li#dark_text= link_to "БАРНАЯ КАРТА", bar_list_path
			%hr	
			%li#dark_text= link_to "БАНКЕТЫ", banquet_path
			%hr
			%li#dark_text= link_to "ДЕТСКОЕ МЕНЮ", kids_menu_path
	.news
		%h3#dark_text НОВОСТИ & СПЕЦИАЛЬНЫЕ ПРЕДЛОЖЕНИЯ
		%hr
		%ul
			-@posts.each do |post|
				%li
					.post
						- if post.image?
							= link_to (image_tag post.image_url(:thumb)), post_path(post)
						%br
						#dark_text= link_to (post.date.nil? ? "-" : post.date.strftime("%d/%m/%Y") ), post_path(post)
						%hr
						#light_text
							= link_to post.title, post_path(post)
		%p
			Страницы: 
			= paginate @posts
	= render "shared/footer"
.right_column
	.events
		%h3#dark_text МЕРОПРИЯТИЯ
		%hr
		%ul
			- @events.each do |event|
				%li= link_to event.title, event_path(event)
			
	.sport
		%h3#dark_text СПОРТИВНЫЕ ТРАНСЛЯЦИИ
		%hr
		%ul
			- @sports.each do |sport|
				%li= link_to sport.title, sport_path(sport)


	.movies
		%h3#dark_text АФИША КИНО НА НЕДЕЛЮ
		- @movies.each do |movie|
			.movie_main
				%hr
				.right
					= image_tag movie.image_url(:small_movie) if movie.image?
					= movie.showtime.strftime("%d %B / %H:%M")
					%br
					.day_of_week
						= movie.showtime.strftime("%A")
						%p
							= movie.description.nil? ? "" : (link_to "Подробнее", movie_path(movie))

				.left
					%h3#light_text= movie.title
					%p
						= movie.director
						%br
							= movie.origin
							= ","
							= movie.genre
							= ","
							= movie.year				



			