.right_column
	.events
		%h3 МЕРОПРИЯТИЯ
		%hr
		%ul
			- @events.each do |event|
				%li= link_to event.title, event_path(event)
			
	.sport
		%h3 СПОРТИВНЫЕ ТРАНСЛЯЦИИ


	.movies
		%h3 АФИША КИНО НА НЕДЕЛЮ
		- @movies.each do |movie|
			.movie_main
				%hr
				.right
					= image_tag("rails.png")
					= movie.showtime.strftime("%d %B / %H:%M")
					%br
					.day_of_week
						= movie.showtime.strftime("%A")
						%p
							= movie.description.nil? ? "" : (link_to "Подробнее", movie_path(movie))
					
					
				.left
					
					%h3= movie.title
					%p
						= movie.director
						%br
							= movie.origin
							= ","
							= movie.genre
							= ","
							= movie.year				



			