= form_for @broadcast do |f|
  -if @broadcast.errors.any?
    #error_explanation
      %h2= "#{pluralize(@broadcast.errors.count, "error")} prohibited this broadcast from being saved:"
      %ul
        - @broadcast.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :showtime
    = f.datetime_select :showtime
  .field

    = f.select(:sport_id, Sport.all.collect {|p| [ p.title, p.id ] }, {:include_blank => false})
  .actions
    = f.submit 'Save'
