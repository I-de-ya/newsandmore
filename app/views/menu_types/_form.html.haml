= form_for @menu_type do |f|
  -if @menu_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@menu_type.errors.count, "error")} prohibited this menu_type from being saved:"
      %ul
        - @menu_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
